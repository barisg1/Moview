@model Movies
<form method="post" enctype="multipart/form-data">
    <input asp-for="PosterUrl" hidden/>
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <label asp-for="Title">Movie Title:</label>
            <input asp-for="Title" type="text" class="form-control"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="Description">Movie Description:</label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="ReleaseDate">Movie Release Date:</label>
            <input asp-for="ReleaseDate" type="text" class="form-control" />
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="Genre">Movie Genre:</label>
            <input asp-for="Genre" type="text" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        <div class="row pb-3">
            <label asp-for="Director">Movie Director:</label>
            <input asp-for="Director" type="text" class="form-control" />
            <span asp-validation-for="Director" class="text-danger"></span>
        </div> 
        <div class="row pb-3">
            <label asp-for="PosterUrl">Movie Poster:</label>
            <input type="file" name="file" class="form-control" />
            <span asp-validation-for="PosterUrl" class="text-danger"></span>
        </div>
        @if(Model != null)
        {
            <button type="submit" class="btn">Edit Movie</button>
        }
        else
        {
            <button type="submit" class="btn">Add Movie</button>
        }
        <a asp-controller="Movies" asp-action="Index" class="btn">Back</a>
    </div>

</form>